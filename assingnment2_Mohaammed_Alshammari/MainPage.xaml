<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assingnment2_Mohaammed_Alshammari.MainPage">

    <StackLayout>
        <Label Text= "list of provinces" FontSize="Large" HorizontalOptions = "Center" VerticalOptions="CenterAndExpand"/>

        <ListView x:Name="provinceListView" ItemSelected="OnProvinceSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Flag}" WidthRequest="50" HeightRequest="50"/>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding Capital}"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
